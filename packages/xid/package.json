{
  "name": "@blockchain-commons/xid",
  "version": "1.0.0-alpha.5",
  "type": "module",
  "description": "Blockchain Commons XID for TypeScript",
  "license": "BSD-2-Clause-Patent",
  "author": "Leonardo Custodio <leonardo@custodio.me>",
  "homepage": "https://github.com/leonardocustodio/blockchain-commons",
  "repository": {
    "type": "git",
    "url": "https://github.com/leonardocustodio/blockchain-commons",
    "directory": "packages/xid"
  },
  "bugs": {
    "url": "https://github.com/leonardocustodio/blockchain-commons/issues"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "browser": "dist/index.iife.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "browser": "./dist/index.iife.js",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docs": "typedoc",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "xid",
    "extensible-identifier",
    "decentralized-identity",
    "blockchain-commons",
    "envelope",
    "gordian",
    "cryptography",
    "provenance"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@blockchain-commons/eslint": "workspace:*",
    "@blockchain-commons/tsconfig": "workspace:*",
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "ts-node": "^10.9.2",
    "tsdown": "^0.17.2",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@blockchain-commons/dcbor": "workspace:*",
    "@blockchain-commons/envelope": "workspace:*",
    "@blockchain-commons/known-values": "workspace:*",
    "@blockchain-commons/components": "workspace:*",
    "@blockchain-commons/provenance-mark": "workspace:*"
  }
}
